<Window x:Class="canvas3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:canvas3"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Window.DataContext>
        <local:ViewModel/>
    </Window.DataContext>
    <Grid>
        <Canvas>
            <Button x:Name="button" Content="button" Canvas.Left="195" Canvas.Top="71" Width="75" Command="{Binding AddBox}"/>
            <TextBox x:Name="textBox" Height="23" Canvas.Left="55" TextWrapping="Wrap" Text="{Binding IdValue}" Canvas.Top="75" Width="120"/>
            <Canvas x:Name ="rectangle2" Height="{Binding SelectedBox.Size}" Width="{Binding SelectedBox.Size}" IsManipulationEnabled="True" Background="Black"  Canvas.Left="{Binding SelectedBox.Margin}"/>
            <!--<Canvas x:Name ="rectangle1" Height="33" Width="55" IsManipulationEnabled="True" Background="Aqua" />-->
        </Canvas>
    </Grid>
</Window>
